{
  "extends": ["../../.eslintrc.json"],
  "ignorePatterns": ["!**/*"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "no-restricted-imports": [
          "error",
          {
            "paths": [
              "error",
              "@apollo/client",
              "@vegaprotocol/data-provider",
              "ag-grid-react",
              "ag-grid-community",
              "graphql",
              "graphql-tag",
              "graphql-ws",
              "ethers",
              "@ethersproject"
            ],
            "patterns": ["@sentry/*"]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    }
  ]
}
